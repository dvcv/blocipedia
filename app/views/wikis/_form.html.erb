<%= form_for [wiki] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <div id="epiceditor" class = "edit-text-area">
      <textarea rows="8" class="form-control" name="wiki[body]" id="wiki_body" ></textarea>
    </div>
  </div>
  <% if user_is_authorized_for_private_button?(wiki) %>
    <div class="form-group">
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private, id: "private" %> Private
      <% end %>
    </div>
  <% end %>
<% if (wiki.user == current_user && current_user.premium?) || current_user.admin?%>
  <div class="form-group">
    <div class="collaborators">
      <h6> Add Collaborators</h6>
      <%=  %>
      <% @users.each do |user| %>
        <div class="user">
        <%= check_box_tag "collaborators[]", user.id, @wiki.user_ids.include?(user.id) %>
        <%= user.email %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
